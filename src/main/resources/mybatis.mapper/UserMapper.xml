<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhaoyang.mapper.UserMapper">
    <resultMap id="UserStateResultMap" type="com.zhaoyang.entity.UserState">
        <result column="account" jdbcType="VARCHAR" property="account" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="allowed" jdbcType="TINYINT" property="allowed" />
    </resultMap>

    <!--获取用户-->
    <select id="getUser" resultType="com.zhaoyang.entity.User">
        SELECT *
            FROM users
                WHERE account = #{account}
    </select>

    <!--检查用户名与密码是否正确-->
    <select id="getLoginState" resultType="com.zhaoyang.entity.User">
        SELECT *
            FROM users
                WHERE account = #{account} and password = #{password}
    </select>

    <!--改变用户权限-->
    <update id="changeUser">
        UPDATE users
            SET allowed= #{allowed}
                WHERE account= #{account}
    </update>

    <!--添加用户-->
    <insert id="createUser">
        INSERT INTO users(account, password, id, allowed, isManager)
            values(#{account}, #{password}, #{id}, #{allowed}, #{isManager})
    </insert>

    <!--获取所有用户权限-->
    <select id="getUserState" resultMap="UserStateResultMap">
        SELECT account,
                name,
                allowed
        FROM users
        WHERE role = 'manager'
    </select>

</mapper>
